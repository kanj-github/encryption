<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/et_secret_input"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:singleLine="false"
            android:maxLines="4"
            android:hint="@string/secret_input_hint"/>

    <Button
            android:text="@string/save_secret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_save"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/et_secret_input"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

    <TextView
            android:text="@string/saved_text_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_label_saved_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/bt_save"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_saved_text"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_saved_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textSize="16sp"
            android:textColor="@android:color/holo_red_dark"
            tools:text="@string/saved_text_label"/>

    <TextView
            android:text="@string/secret_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_label_secret"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_saved_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_secret"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_secret"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textSize="16sp"
            android:textColor="@android:color/holo_blue_dark"
            tools:text="@string/secret_label"/>
</androidx.constraintlayout.widget.ConstraintLayout>